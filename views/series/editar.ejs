<%- include ('../partials/header') %>

    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <form method="post">
                        <h2>Editar Séries</h2>                  
                        <div class="form-group">
                            <label for="name" class="form-label">Nome da série</label>
                            <input value="<%= serie.name %>" name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="nameHelp" placeholder="Informe o nome">
                            <div id="nameHelp" class="form-text">Nome da série a ser salvo.</div>
                            <% if(errors && errors.indexOf('name') >=0 ) { %>
                                <div id="nameHelp" class="form-text">Por favor, informe o nome da série</div>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="status">Situação:</label>
                            <select class="form-control" name="status" id="status">
                                <% labels.forEach(label => { %>
                                    <option value="<%= label.id %>" <% if(label.id === serie.status) { %> selected="selected"
                                        <% } %>><%= label.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <button class="btn btn-primary">Salvar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include ('../partials/footer') %>